<% provide(:title, @competition.name) %>

<%= render layout: 'nav' do %>
  <%= render "competition_info", competition: @competition %>

  <% @competition.events_with_rounds_with_results.each do |event, rounds_with_results| %>

    <!-- Empty div to allow linking directly to results for an event -->
    <%= content_tag :div, "", id: "e#{event.id}" %>

    <% rounds_with_results.each do |round_format, results| %>
      <h3>
        <%= anchorable "#{event.name} #{round_format.name}", "e#{event.id}_#{round_format.id}" %>
      </h3>
      <%= render "competition_results", results: results, hide_event: true, hide_round: true %>
    <% end %>

  <% end %>
<% end %>

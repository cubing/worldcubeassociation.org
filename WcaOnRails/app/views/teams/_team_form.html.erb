  <%= horizontal_simple_form_for [@committee, @team], html: { class: 'are-you-sure no-submit-on-enter' } do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <%= f.input :name %>
    <%= f.input :description, hint: t('.description_html', md: t('common.hints.supports_md_html')) %>
    <%= link_to icon("undo", "Back to #{@committee.name}"), committee_path(@committee), class: "btn btn-primary teams-home" %>
    <%= f.button :submit, class: "btn btn-success" %>
    </div>
  <% end %>

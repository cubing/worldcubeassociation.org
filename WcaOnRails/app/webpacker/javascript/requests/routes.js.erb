export const personUrl = (wcaId) => `<%= URI.decode(Rails.application.routes.url_helpers.person_path("wca_id: ${wcaId}"))%>`;

export const postsUrl = (page, format = 'json') => {
  // In this case id holds the page number ;)
  return `<%= URI.decode(Rails.application.routes.url_helpers.posts_path(format: "${format}")) %>?page=${page}`;
};

export const competitionApiUrl = (id) => `<%= URI.decode(Rails.application.routes.url_helpers.api_v0_competition_path("${id}"))%>`;

export const competitionResultsApiUrl = (id, eventId) => `<%= URI.decode(Rails.application.routes.url_helpers.api_v0_competition_results_path("${id}", "${eventId}")) %>`;

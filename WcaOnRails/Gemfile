source 'https://rubygems.org'

gem 'rails', '4.2.1'
gem 'sass-rails'
gem 'uglifier'
gem 'therubyracer'

gem 'sdoc', group: :doc
gem 'dotenv-rails', :require => 'dotenv/rails-now'
gem 'envied'
gem 'seedbank'

gem 'jquery-rails'
gem 'jbuilder'
gem 'bootstrap-sass'
gem 'mail_form'
gem 'simple_form'
gem 'valid_email'
gem 'recaptcha', :require => 'recaptcha/rails'
gem 'will_paginate'
gem 'bootstrap-will_paginate'
gem 'local_time'
gem 'devise'
gem 'devise-bootstrap-views'
gem 'doorkeeper'
gem 'wice_grid'
gem 'strip_attributes'
gem 'bootstrap-datepicker-rails'
gem 'time_will_tell'
gem 'redcarpet', '~> 3.3'
gem 'twitter-typeahead-rails'
gem 'underscore-rails'
gem 'selectize-rails'
gem 'high_voltage'
gem 'best_in_place'
gem 'carrierwave'

# Pointing to jfly/carrierwave-crop which has a workaround for
#  https://github.com/kirtithorat/carrierwave-crop/issues/17
gem 'carrierwave-crop', git: "git://github.com/jfly/carrierwave-crop.git"

gem 'mini_magick'
gem 'system'
gem 'mysql2'
gem 'premailer-rails'
gem 'nokogiri'
gem 'font-awesome-sass'
gem 'lodash-rails'

group :development, :test do
  gem 'rspec-rails'
  gem 'factory_girl_rails'
  gem 'faker'

  gem 'byebug'
  gem 'web-console'
end

group :development do
  gem 'pre-commit'
  gem 'scss_lint', require: false
  gem 'better_errors'
  gem 'binding_of_caller'
end

group :test do
  gem 'rake' # As per http://docs.travis-ci.com/user/languages/ruby/
  gem 'guard-rspec'
  gem 'launchy'
  gem 'capybara'
  gem 'oga' # XML parsing library introduced for testing RSS feed

  # Rails 4 apparently doesn't run after_commit handlers in tests. We need
  # to test carrierwave's file deletion code, which runs inside of an
  # after_commit callback, so we have this gem to get it to run in tests.
  gem 'test_after_commit'
end

group :production do
  gem 'unicorn'
  gem 'newrelic_rpm'
end
